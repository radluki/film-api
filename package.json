{
  "name": "film-api",
  "version": "1.0.0",
  "description": "Api without db, just filesystem",
  "main": "index.js",
  "scripts": {
    "dev": "npx nodemon --ignore ./data/ ./src/index.ts",
    "build": "tsc",
    "start": "tsc && node ./dist/src/index.js",
    "healthcheck": "ts-node ./scripts/healthcheck.ts",
    "test:ut": "jest --rootDir src",
    "test:ut:watch": "jest --watch --rootDir src",
    "test": "npm run healthcheck && jest -- get && jest --runInBand -- post error",
    "test:watch": "npm run healthcheck && jest --watch --runInBand"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "http-status-codes": "^2.3.0"
  }
}
